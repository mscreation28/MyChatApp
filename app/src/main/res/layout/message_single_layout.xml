<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_thumb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_avtar"/>

    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:layout_toEndOf="@+id/message_profile_thumb"
        android:layout_toRightOf="@+id/message_profile_thumb"
        android:background="@drawable/message_text_background"
        android:text="TextView" />

</RelativeLayout>